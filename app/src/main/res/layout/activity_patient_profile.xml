<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ihsinformatics.endtb.Screens.PatientProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/activity_patient_registeration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryTint"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:clickable="false"
                    app:srcCompat="@drawable/male_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rlQuestion_patientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <!--<TextView
                            android:id="@+id/tvQuestion_patientName"
                            style="@style/question_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name" />-->

                        <TextView
                            android:id="@+id/tvAnswer_patientName"
                            style="@style/question_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test_registration_no"
                            android:textColor="@color/Black" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rlQuestion_testRegNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvQuestion_testRegNumber"
                            style="@style/question_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_patient_id" />

                        <TextView
                            android:id="@+id/tvAnswer_testRegNumber"
                            style="@style/question_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="@string/test_registration_no"
                            android:textColor="@color/Black"
                            android:textSize="24sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rlQuestion_fatherName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvQuestion_fatherName"
                            style="@style/question_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/registered_on" />

                        <TextView
                            android:id="@+id/tvAnswer_encounterName"
                            style="@style/question_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="@string/encounter_date"
                            android:textColor="@color/Black" />
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    style="@style/question_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/patient_information"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEdit"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="italic"
                    tools:drawableLeft="@drawable/edit"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:text="Edit" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rlQuestion_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_occupation"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/occupation" />

                <TextView
                    android:id="@+id/tvAnswer_occupation"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlQuestion_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_age"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/age" />

                <TextView
                    android:id="@+id/tvAnswer_age"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlQuestion_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_gender"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/sex" />

                <TextView
                    android:id="@+id/tvAnswer_gender"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <TextView
                style="@style/question_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="left"
                android:text="@string/address_information"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/rlQuestion_contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_contactNumber"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/contact_no" />

                <TextView
                    android:id="@+id/tvAnswer_contactNumber"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlQuestion_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_address"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/address" />

                <TextView
                    android:id="@+id/tvAnswer_address"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <TextView
                style="@style/question_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="left"
                android:text="@string/other_details"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/rlQuestion_referringFacilityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_referringFacilityName"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/name_of_facility" />

                <TextView
                    android:id="@+id/tvAnswer_referringFacilityName"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlQuestion_referringFacilityAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_reerringFacilityAddress"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/address_of_facility" />

                <TextView
                    android:id="@+id/tvAnswer_referringFacilityAddress"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlQuestion_patientHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_patientHistory"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/patient_history" />

                <TextView
                    android:id="@+id/tvAnswer_patientHistory"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlQuestion_hivStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_hivStatus"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/hiv_status" />

                <TextView
                    android:id="@+id/tvAnswer_hivStatus"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlQuestion_patientStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_patientStatus"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/patient_status" />

                <TextView
                    android:id="@+id/tvAnswer_patientStatus"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/status_date"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlQuestion_statusDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="7dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvQuestion_statusDate"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/status_date" />

                <TextView
                    android:id="@+id/tvAnswer_statusDate"
                    style="@style/question_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/test_registration_no"
                    android:textColor="@color/Black" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddTestInfo"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_test_order" />

        <Button
            android:id="@+id/btnViewMicroscopyTestResult"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_microscopy_test_result" />
        <Button
            android:id="@+id/btnViewMicroscopyEQATestResult"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_microscopy_eqa_test_result" />
        <Button
            android:id="@+id/btnViewCXRTestResult"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_cxr_test_result" />

        <Button
            android:id="@+id/btnViewXpertMTBTestResult"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_xpert_mtb_rif_test_result" />
    </LinearLayout>
</ScrollView>
